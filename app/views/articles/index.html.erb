<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Year</th>
      <th>Journal</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.author %></td>
        <td><%= article.title %></td>
        <td><%= article.year %></td>
        <td><%= article.journal %></td>
        <td><%= article.volume %></td>
        <td class="buttons"><%= link_to 'Download bibtex', article_download_path(article.id), class: "button secondary" %>
        <%= link_to 'Show', article, class: "button secondary" %>
        <%= link_to 'Edit', edit_article_path(article), class: "button secondary" %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "button secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "button secondary" %>
